{
    "mcpServers": {
    	"memory": {
          "command": "PATH_TO_YOUR_CLONED_PROJECT/.venv/bin/uv",
          "args": [
            "--directory",
            "PATH_TO_YOUR_CLONED_PROJECT",
            "run",
            "memory"
          ],
          "env": {
            "MCP_MEMORY_CHROMA_PATH": "/Users/Your_Username/Library/Application Support/mcp-memory/chroma_db",
            "MCP_MEMORY_BACKUPS_PATH": "/Users/Your_Username/Library/Application Support/mcp-memory/backups"
         }
      }
   }
}
